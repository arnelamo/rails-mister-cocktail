<div class="container">
  <h1>Cocktails</h1>
  <div id="cocktails">
    <% @cocktails.each do |cocktail| %>
    <div class="cocktail">
      <%= link_to cocktail_path(cocktail) do %>
      <h5><%= cocktail.name %></h5>
      <% end %>
    </div>
    <% end %>

    <%= image_tag("https://res.cloudinary.com/dkibkytpy/image/upload/v1562940187/pgtfyeox8vqg5zckknyc.jpg",
          width: 400, height: 300, crop: :fill) %>

    <%= link_to 'Add new cocktail', new_cocktail_path %>
  </div>
</div>
