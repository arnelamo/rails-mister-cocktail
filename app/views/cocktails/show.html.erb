
<div class="container">
    <ul style="list-style: none;">
     <h1><%= @cocktail.name %></h1>
      <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
    <% @cocktail.doses.each do |dose| %>
    <li>
      <p><%= dose.description %> of <%= dose.ingredient.name %>

      <%= link_to dose_path(dose), method: :delete do %>
        <span><i class="fa fa-trash" aria-hidden="true"></i></span></p>
      <% end %>

    </li>
    <% end %>
      <%= link_to new_cocktail_dose_path(@cocktail) do %>
        <span><i class="fas fa-plus"></i> Add new ingredient</span> |
      <% end %> |
      <%= link_to 'Back', cocktails_path  %>
    </ul>


</div>
